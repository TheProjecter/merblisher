<p>
  <label for="title">Title</label><br />
  <%= control_for @article, :title, :text, :size => 51 %>
</p>

<p>
  <label for="content">Content</label><br />
  <%= control_for @article, :content, :textarea, :rows => 20, :cols => 50 %>
</p>

<p>
  <label for="Category">Category</label><br />
  <%= control_for @article.category, :id, :select, { :text_method => :name, :collection => Category.find(:all) } %>
</p>

<p>
  <button type="submit" name="Submit" value="Submit">&nbsp;Save article&nbsp;</button>
</p>
